<% include partials/header %>

<div class="container">
    
    <div class="jumbotron">
        
        <header class="container">
            <h1>This is a campgrounds page</h1>
            <p>View all campgrounds from all-over the workld</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campGround</a>
            </p>
        </header>
    </div>
    

    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach(function(campground){ %>
        
            <div class='card col-md-3 col-sm-6'>
                <div >
                    <img class="img-thumbnail" src="<%= campground.image %>"/>
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                    <p><a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More info</a></p>
                </div>
            </div>
        
        <% }) %>
    </div>

    <a href="/">back</a>
</div>


<% include partials/footer %>